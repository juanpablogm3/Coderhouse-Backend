<div class="row product justify-content-evenly" id="div">
    <form id="form" action="/" method="post" enctype="multipart/form-data">
        <div>
            <input type="text" placeholder="Ingrese Title" value="" name="title">
            <input type="text" placeholder="Ingrese description" value="" name="description">
            <input type="number" placeholder="Ingrese Price" value="" name="price">
            <input type="file" name="thumbnail">
            <input type="code" placeholder="Ingrese Code" value="" name="code">
            <input type="number" placeholder="Ingrese Stock" value="" name="stock">
            <input type="text" placeholder="Ingrese Category" value="" name="category">
            <input type="hidden" value="true" name="status">
            <button type="submit">Guardar</button>
        </div>
    </form>

    <h1>LISTADO DE PRODUCTOS</h1>
    {{#each prods}}
    <div class="card product__container" style="width: 14rem;">
        <div>
            <img src="{{ this.thumbnail }}" class="card-img-top" alt="foto de Product {{this.id}}">
        </div>
        <div class="card-body">
            <h3 class="card-title">{{this.title}}</h3>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">${{this.price}}</p>
        </div>
    </div>
    {{/each}}
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>